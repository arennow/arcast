	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'arcast'",
			"cargo": {
				"args": [
					"build",
					"--bin=arcast",
					"--package=arcast"
				],
				"filter": {
					"name": "arcast",
					"kind": "bin"
				}
			},
			"args": [
				"-d", "/Users/aaron/Downloads/npr",
				"-c", "/Users/aaron/Downloads/npr/arcast.json"
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'arcast'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=arcast",
					"--package=arcast"
				],
				"filter": {
					"name": "arcast",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}